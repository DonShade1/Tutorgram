<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/futurabookfont"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/relative123"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Please write the phone number you registered with..."
        android:fontFamily="@font/futurabookfont"/>

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following Security Questions?"
        android:layout_below="@+id/find_phone_number"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/futurabookfont"/>

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/title_questions"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Women run the world Yes or No?"
        android:fontFamily="@font/futurabookfont"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@+id/question_1"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Are you a SlayQueen Yes or No?"
        android:fontFamily="@font/futurabookfont"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_below="@+id/question_2"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/futurabookfont"/>

</RelativeLayout>